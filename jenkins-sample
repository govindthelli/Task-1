pipeline {
    agent any

    stages {
        stage('run') {
            steps {
                sh '''
                    docker run --rm -v $PWD:/app python:3.10 python /app/app.py
                '''
            }
        }
    }

    post {
        success {
            mail to: 'govindthelli560@gmail.com',
                 subject: "Deployment Status",
                 body: "Deployment successful"
        }
        failure {
            mail to: 'govindthelli560@gmail.com',
                 subject: "Deployment Status",
                 body: "Deployment unsuccessful"
        }
    }
}
